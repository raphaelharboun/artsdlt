{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha.cmd"
            },
            "runtimeArgs": [
                "--timeout",
                "999999",
                "--colors",
                "--recursive",
                "${workspaceRoot}/test/"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "NODE_ENV" : "test"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Swagger Debug",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/swagger-project",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/swagger-project-start.cmd"
            },
            "runtimeArgs": [
                "-b"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Swagger Test",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/swagger-project",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/swagger-project-test.cmd"
            },
            "runtimeArgs": [
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\app.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Swagger Start",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/swagger-project",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/swagger-project.cmd"
            },
            "runtimeArgs": [
                "start"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}